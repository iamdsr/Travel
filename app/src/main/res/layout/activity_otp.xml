<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppLaunchSetup.OtpActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_verification"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:layout_margin="32dp"
        android:textSize="32sp"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_have_sent_an_otp_on_the_given_number"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="16sp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/user_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 7044560321"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_phone_number">

        <TextView
            android:id="@+id/otp1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_white_bg"
            android:inputType="phone"
            android:fontFamily="@font/roboto_black"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/onTertiaryContainer"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/otp2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_white_bg"
            android:inputType="phone"
            android:fontFamily="@font/roboto_black"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/onTertiaryContainer"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/otp3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_white_bg"
            android:inputType="phone"
            android:fontFamily="@font/roboto_black"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/onTertiaryContainer"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/otp4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_white_bg"
            android:inputType="phone"
            android:fontFamily="@font/roboto_black"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/onTertiaryContainer"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/otp5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_white_bg"
            android:inputType="phone"
            android:fontFamily="@font/roboto_black"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/onTertiaryContainer"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/otp6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_white_bg"
            android:inputType="phone"
            android:fontFamily="@font/roboto_black"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/onTertiaryContainer"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="16dp"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/resend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Resend code"
        android:textColor="@color/primary"
        android:fontFamily="@font/roboto_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verify_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32sp"
        android:padding="20dp"
        android:text="@string/verify_otp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_label"
        app:layout_constraintVertical_bias="0.031" />


</androidx.constraintlayout.widget.ConstraintLayout>